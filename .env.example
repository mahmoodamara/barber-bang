NODE_ENV=CHANGE_ME_NODE_ENV
PORT=CHANGE_ME_PORT
MONGO_URI=CHANGE_ME_MONGO_URI
TRUST_PROXY=CHANGE_ME_TRUST_PROXY
REGISTER_MIN_DELAY_MS=CHANGE_ME_REGISTER_MIN_DELAY_MS
COUPON_RESERVATION_TTL_MINUTES=CHANGE_ME_COUPON_RESERVATION_TTL_MINUTES

JWT_SECRET=CHANGE_ME_JWT_SECRET
JWT_EXPIRES_IN=CHANGE_ME_JWT_EXPIRES_IN
JWT_ISSUER=CHANGE_ME_JWT_ISSUER
JWT_AUDIENCE=CHANGE_ME_JWT_AUDIENCE

# Comma-separated allowlist (no wildcard in production)
# Example: CORS_ORIGIN=https://barber-bang.netlify.app,https://other-frontend.com
CORS_ORIGIN=CHANGE_ME_CORS_ORIGIN
# Example: FRONTEND_URL=https://barber-bang.netlify.app
FRONTEND_URL=CHANGE_ME_FRONTEND_URL
# Example: CLIENT_URL=https://barber-bang.netlify.app
CLIENT_URL=CHANGE_ME_CLIENT_URL

# Stripe
STRIPE_SECRET_KEY=CHANGE_ME_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=CHANGE_ME_STRIPE_WEBHOOK_SECRET
STRIPE_CURRENCY=CHANGE_ME_STRIPE_CURRENCY
AUTO_REFUND_OUT_OF_STOCK=CHANGE_ME_AUTO_REFUND_OUT_OF_STOCK
STRIPE_WEBHOOK_LOCK_STALE_MINUTES=10

# Observability
ENABLE_METRICS=false
ENABLE_TRACING=false
LOG_LEVEL=info
# Optional: Prometheus scrape allowed IPs (comma-separated); when unset, /metrics uses admin auth in production
# METRICS_ALLOW_IP=127.0.0.1,10.0.0.0/8
# Optional: Sentry DSN for error tracking (no PII sent; requestId included)
# SENTRY_DSN=https://key@org.ingest.sentry.io/project
# Optional: OpenTelemetry service name when ENABLE_TRACING=true
# OTEL_SERVICE_NAME=simple-shop-v2

# Invoice / Receipt (icount | greeninvoice | manual | stripe)
INVOICE_PROVIDER=CHANGE_ME_INVOICE_PROVIDER
INVOICE_BASE_URL=CHANGE_ME_INVOICE_BASE_URL
# Icount (when INVOICE_PROVIDER=icount)
# ICOUNT_API_URL=https://api.icount.co.il
# ICOUNT_API_KEY=CHANGE_ME
# GreenInvoice (when INVOICE_PROVIDER=greeninvoice)
# GREENINVOICE_API_URL=https://api.greeninvoice.co.il
# GREENINVOICE_API_KEY=CHANGE_ME

# VAT (Israel)
ENABLE_VAT=CHANGE_ME_ENABLE_VAT
VAT_RATE=CHANGE_ME_VAT_RATE

# Allocation (Israel)
ALLOCATION_ENABLED=CHANGE_ME_ALLOCATION_ENABLED
ALLOCATION_THRESHOLD_BEFORE_VAT_ILS=CHANGE_ME_ALLOCATION_THRESHOLD_BEFORE_VAT_ILS
ALLOCATION_FORCE=CHANGE_ME_ALLOCATION_FORCE

# Checkout redirect urls (used by Stripe)
STRIPE_SUCCESS_PATH=CHANGE_ME_STRIPE_SUCCESS_PATH
STRIPE_CANCEL_PATH=CHANGE_ME_STRIPE_CANCEL_PATH

# Returns / Cancellation
RETURN_WINDOW_DAYS=CHANGE_ME_RETURN_WINDOW_DAYS
RETURN_ALLOW_STATUS=CHANGE_ME_RETURN_ALLOW_STATUS
RETURN_INCLUDE_SHIPPING=CHANGE_ME_RETURN_INCLUDE_SHIPPING
REFUND_WINDOW_DAYS=CHANGE_ME_REFUND_WINDOW_DAYS
CANCEL_FEE_PERCENT=CHANGE_ME_CANCEL_FEE_PERCENT
CANCEL_FEE_FIXED=CHANGE_ME_CANCEL_FEE_FIXED

# Seed (required for npm run seed; no default passwords)
SEED_ADMIN_EMAIL=CHANGE_ME_SEED_ADMIN_EMAIL
SEED_ADMIN_PASSWORD=CHANGE_ME_SEED_ADMIN_PASSWORD
SEED_STAFF_EMAIL=CHANGE_ME_SEED_STAFF_EMAIL
SEED_STAFF_PASSWORD=CHANGE_ME_SEED_STAFF_PASSWORD
SEED_TEST_EMAIL=CHANGE_ME_SEED_TEST_EMAIL
SEED_TEST_PASSWORD=CHANGE_ME_SEED_TEST_PASSWORD
# Production override: set BOTH to allow seed in production (destructive)
# ALLOW_SEED_PROD=true
# SEED_CONFIRM=WIPE_DB

# SEO Configuration
# Example: STORE_BASE_URL=https://barber-bang.netlify.app
STORE_BASE_URL=https://barber-bang.netlify.app
STORE_OG_IMAGE_URL=https://yourstore.com/og-default.jpg
STORE_NAME_HE=שם החנות
STORE_NAME_AR=اسم المتجر

# Background jobs
ENABLE_RESERVATION_REPAIR_JOB=true
RESERVATION_REPAIR_INTERVAL_MS=180000
STRIPE_CHECKOUT_STALE_MINUTES=15
ENABLE_PRODUCT_RANKING_JOB=true
PRODUCT_RANKING_INTERVAL_MS=600000
PRODUCT_RANKING_BATCH_SIZE=500
